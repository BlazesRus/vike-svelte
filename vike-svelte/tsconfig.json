{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/",
    "types": ["svelte"]
  }
}