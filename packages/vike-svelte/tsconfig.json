{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist/",
    "types": [
      "svelte"
    ]
  },
  "include": [
    "./renderer",
    "./hooks",
    "./components",
  ]
}